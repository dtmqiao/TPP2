<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dongtianming.tpp2.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager
                    android:id="@+id/activity_main_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"></android.support.v4.view.ViewPager>
                <LinearLayout
                    android:layout_alignBottom="@id/activity_main_viewpager"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_main_llpoints"></LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/i"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/test111"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热映影片"
                        android:textColor="#f3130808"
                        android:textSize="15sp"/>
                    <LinearLayout
                        android:layout_alignBottom="@id/test111"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/activity_main_totaltextview"
                            android:layout_marginRight="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#6e6767"
                            android:text="全部20部"/>
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@mipmap/back"/>
                    </LinearLayout>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/activity_main_recycylerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#6e6767"></LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/test222"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="即将上映"
                        android:textColor="#f3130808"
                        android:textSize="15sp"/>
                    <LinearLayout
                        android:layout_alignBottom="@id/test222"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginRight="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#6e6767"
                            android:text="全部"/>
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@mipmap/back"/>
                    </LinearLayout>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/activity_main_hotrecycylerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#6e6767"></LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
